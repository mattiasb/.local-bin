function idx {
    local str a
    str="${1}"
    shift
    a=( "${@}" )
    for i in $(seq 0 "${#}"); do
        if [ "${str}" = "${a[i]}" ]; then
            echo "$((i + 1))"
            return 0
        fi
    done

    return 1
}

a=( "${@}" )
if i="$(idx up "${@}")"; then
    a=( "${a[@]:0:$i}" "--no-destroy-on-error" "${a[@]:$i}" )
fi

exec /usr/bin/vagrant "${a[@]}"
